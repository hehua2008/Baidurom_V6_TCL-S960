    <com.mediatek.audioprofile.SwitchOffRingtonePreference android:persistent="false" android:title="@string/switch_off_title" android:key="switch_off_ringtone" android:summary="@string/switch_off_summary" android:dialogTitle="@string/switch_off_title" android:ringtoneType="switch_on_off" />
